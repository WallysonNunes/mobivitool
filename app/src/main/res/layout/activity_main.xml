<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wallyson.lima.mobivitool.view.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:elevation="18dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageButton
            android:id="@+id/btTimeline"
            android:layout_width="20dp"
            android:layout_height="68dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="0.16"
            android:background="@mipmap/ic_timeline"
            android:elevation="18dp" />

        <ImageButton
            android:id="@+id/btZoom"
            android:layout_width="20dp"
            android:layout_height="68dp"
            android:layout_margin="16dp"
            android:layout_weight="0.16"
            android:background="@mipmap/ic_zoom"
            android:elevation="7dp"
            app:srcCompat="@mipmap/ic_zoom" />// app:srcCompat="@mipmap/ic_timeline" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
