<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wallyson.lima.mobivitool.view.SelectSimpleActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Spinner
            android:id="@+id/spinPrefixoSimple"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Spinner
            android:id="@+id/spinAnoSimple"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMedia"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Ordenado por Média"
                    android:layout_gravity="left"/>

                <RadioButton
                    android:id="@+id/rbMes"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Ordenado por mês"
                    android:layout_gravity="right"/>

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btSelecionarSimple"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="280dp"
            android:text="Selecionar" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
